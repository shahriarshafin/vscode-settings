{
	//____________SYSTEM SETTINGS____________
	// save after 1 second
	"files.autoSave": "afterDelay",

	//snippets tab completions
	"editor.tabCompletion": "on",

	// confirm before delete
	"explorer.confirmDelete": false,

	// fetch changes from remotes
	"git.autofetch": true,
	//____________SYSTEM SETTINGS____________

	//___________EXTENSION SETTINGS__________
	// prettier Settings
	"prettier.useTabs": true,

	// liveServer settings
	"liveServer.settings.useLocalIp": true,
	//___________EXTENSION SETTINGS__________

	//___________FORMATER SETTINGS___________
	// HTML formatter
	"[html]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	// JavaScript formatter
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	// JSON formatter
	"[jsonc]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	}
	//___________FORMATER SETTINGS___________
}
