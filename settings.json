{
	//____________SYSTEM SETTINGS____________
	// save after 1 second
	"files.autoSave": "afterDelay",
	//snippets tab completions
	"editor.tabCompletion": "on",
	// confirm before delete
	"explorer.confirmDelete": false,
	// file/folder drag-drop confirmation
	"explorer.confirmDragAndDrop": false,
	// fetch changes from remotes
	"git.autofetch": true,
	// smart commit ctrl + enter
	"git.enableSmartCommit": true,
	// git syncing
	"git.confirmSync": false,
	//____________SYSTEM SETTINGS____________

	//__________EXTENSION SETTINGS___________
	// prettier
	"prettier.useTabs": true,
	// liveServer
	"liveServer.settings.donotShowInfoMsg": true,
	"liveServer.settings.useLocalIp": true,
	//__________EXTENSION SETTINGS___________

	//___________FORMATER SETTINGS___________
	// HTML formatter
	"[html]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	// JavaScript formatter
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	// JSON formatter
	"[jsonc]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	// React formatter
	"[javascriptreact]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	//___________FORMATER SETTINGS___________
}
