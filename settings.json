{
	//____________GENERAL__________
	// remove end whitespace on save
	"files.trimTrailingWhitespace": true,
	// format On Save
	"editor.formatOnSave": true,
	// file delete confirmation
	"explorer.confirmDelete": false,
	// file/folder drag-drop confirmation
	"explorer.confirmDragAndDrop": false,
	// start page welcome message
	"workbench.startupEditor": "none",
	// file opening permission
	"security.workspace.trust.untrustedFiles": "open",
	//___________GENERAL__________

	//__________FEATURES__________
	// auto update import
	"javascript.updateImportsOnFileMove.enabled": "always",
	"typescript.updateImportsOnFileMove.enabled": "always",
	// JSX attribute completions
	"javascript.preferences.jsxAttributeCompletionStyle": "auto",
	"typescript.preferences.jsxAttributeCompletionStyle": "auto",
	// auto rename tags
	// "editor.linkedEditing": true,
	// "html.autoClosingTags": true,
	// "javascript.autoClosingTags": true,
	// "typescript.autoClosingTags": true,
	//bracket pair color
	"editor.guides.bracketPairs": "active",
	"editor.bracketPairColorization.enabled": true,
	// complete snippets on tab
	"editor.tabCompletion": "on",
	// code completion suggestion
	"editor.inlineSuggest.enabled": true,
	// include js feature on react
	"emmet.includeLanguages": {
		"javascript": "javascriptreact"
	},
	// layout control button
	"workbench.layoutControl.enabled": true,
	// language feature suggestion for untitled file
	"workbench.editor.historyBasedLanguageDetection": true,
	// function sticky top
	"editor.experimental.stickyScroll.enabled": true,
	// editor Suggestions
	"editor.quickSuggestions": {
		"strings": true,
		"comments": true,
		"other": true
	},
	//___________FEATURES__________

	//__________TERMINAL__________
	// terminal left side tab
	"terminal.integrated.tabs.enabled": true,
	// terminal cursor line width
	"terminal.integrated.cursorWidth": 2,
	// default terminal
	"terminal.integrated.defaultProfile.windows": "Git Bash",
	//__________TERMINAL___________

	//_______VERSION CONTROL_______
	// fetch changes from remotes
	"git.autofetch": true,
	// smart commit ctrl + enter
	"git.enableSmartCommit": true,
	// git syncing confirmation
	"git.confirmSync": false,
	//_______VERSION CONTROL_______

	//_________EXTENSIONS__________
	// #prettier
	"prettier.useTabs": true,
	"prettier.singleQuote": true,
	"prettier.jsxSingleQuote": true,

	// #liveServer
	"liveServer.settings.donotShowInfoMsg": true,
	"liveServer.settings.donotVerifyTags": true,
	"liveServer.settings.useLocalIp": true,

	// #eslint
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": true,
		"source.fixAll.tslint": true,
		"source.organizeImports": true,
		"addMissingImports": true
	},

	// #tabnine
	"tabnine.experimentalAutoImports": true,
	// "tabnine.receiveBetaChannelUpdates": true,

	// #thunderClient
	"thunder-client.codeSnippetLanguage": "js-axios",

	// #copilot
	"github.copilot.enable": {
		"*": true,
		"yaml": false,
		"plaintext": false,
		"markdown": true,
		"javascriptreact": false,
		"javascript": false
	},

	// #tailwindCss
	"css.lint.unknownAtRules": "ignore",
	"tailwindCSS.emmetCompletions": true,
	"tailwindCSS.validate": true,
	"tailwindCSS.includeLanguages": {
		"html": "html",
		"javascript": "javascript",
		"css": "css"
	},
	//_________EXTENSIONS__________

	//___________FORMATER___________
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"[html]": { "editor.defaultFormatter": "vscode.html-language-features" },
	//___________FORMATER___________

	//___________OUTLOOK____________
	// theme-one dark pro
	"workbench.colorTheme": "One Dark Pro Darker",
	// vscode-icons
	"workbench.iconTheme": "material-icon-theme",
	// scroll wheel to zoom
	"editor.mouseWheelZoom": true,
	// smooth scrolling
	"editor.smoothScrolling": true,
	// list smooth scrolling
	"workbench.list.smoothScrolling": true,
	// cursor smooth blinking
	"editor.cursorBlinking": "expand",
	// cursor smooth expand animation
	"editor.cursorSmoothCaretAnimation": true,
	// custom color
	"workbench.colorCustomizations": {
		"tab.activeBorder": "#f8dc07"
		// "tab.activeBorderTop": "#12b38a"
	},
	// window title on top
	"window.title": "${dirty}${activeEditorMedium}${separator}${rootName}${separator}SHAHRIAR SHAFIN",
	// terminal cursor line
	"terminal.integrated.cursorStyle": "line",
	// terminal cursor blinking
	"terminal.integrated.cursorBlinking": true,
	// menubar visibility changes
	"window.menuBarVisibility": "compact"
	//___________OUTLOOK____________

	//_________EXPERIMENTS__________
	// "javascript.validate.enable": false,
	// "typescript.validate.enable": false,
	// "javascript.preferences.importModuleSpecifier": "non-relative",
	// "typescript.preferences.importModuleSpecifier": "non-relative",
	//_________EXPERIMENTS__________
}
