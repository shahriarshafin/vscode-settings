{
	//____________SYSTEM SETTINGS____________
	// experimental
	// "javascript.validate.enable": false,
	// "typescript.validate.enable": false,

	// include js feature on react
	"emmet.includeLanguages": { "javascript": "javascriptreact" },
	// auto update import
	"javascript.updateImportsOnFileMove.enabled": "always",
	"typescript.updateImportsOnFileMove.enabled": "always",
	// remove end whitespace on save
	"files.trimTrailingWhitespace": true,
	// complete snippets on tab
	"editor.tabCompletion": "on",
	// cursor smooth animation
	"editor.cursorSmoothCaretAnimation": true,
	// format On Save
	"editor.formatOnSave": true,
	// scroll wheel to zoom
	"editor.mouseWheelZoom": true,
	// auto rename tag
	"editor.linkedEditing": true,

	// file delete confirmation
	"explorer.confirmDelete": false,
	// file/folder drag-drop confirmation
	"explorer.confirmDragAndDrop": false,

	// terminal left side tab
	"terminal.integrated.tabs.enabled": true,
	// terminal cursor style line/block
	"terminal.integrated.cursorStyle": "line",
	// terminal cursor line width
	"terminal.integrated.cursorWidth": 2,
	// default terminal
	"terminal.integrated.defaultProfile.windows": "Git Bash",

	// fetch changes from remotes
	"git.autofetch": true,
	// smart commit ctrl + enter
	"git.enableSmartCommit": true,
	// git syncing confirmation
	"git.confirmSync": false,
	//____________SYSTEM SETTINGS____________

	//__________EXTENSION SETTINGS___________
	// #eslint
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": true,
		"source.fixAll.tslint": true,
		"source.organizeImports": true
	},
	// #prettier
	"prettier.useTabs": true,
	"prettier.singleQuote": true,

	// #liveServer
	"liveServer.settings.donotShowInfoMsg": true,
	"liveServer.settings.donotVerifyTags": true,
	// "liveServer.settings.useLocalIp": true,

	// #theme-one dark pro
	"workbench.colorTheme": "One Dark Pro Darker",

	// #tabnine
	// "tabnine.experimentalAutoImports": true,

	//#vscode-icons
	"workbench.iconTheme": "vscode-icons",
	//__________EXTENSION SETTINGS___________

	//___________FORMATER SETTINGS___________
	"editor.defaultFormatter": "esbenp.prettier-vscode",

	"[html]": { "editor.defaultFormatter": "vscode.html-language-features" },

	"[css]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },

	"[javascript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },

	"[javascriptreact]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },

	"[json]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },

	"[jsonc]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"tabnine.experimentalAutoImports": true

	//___________FORMATER SETTINGS___________
}
