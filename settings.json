{
	//____________SYSTEM SETTINGS____________
	// complete snippets on tab
	"editor.tabCompletion": "on",
	// file delete confirmation
	"explorer.confirmDelete": false,
	// file/folder drag-drop confirmation
	"explorer.confirmDragAndDrop": false,
	// terminal left side tab
	"terminal.integrated.tabs.enabled": true,
	// cursor smooth animation
	"editor.cursorSmoothCaretAnimation": true,
	// format On Save
	"editor.formatOnSave": true,
	// default terminal
	"terminal.integrated.defaultProfile.windows": "Git Bash",
	// auto rename end tag
	"editor.linkedEditing": true,
	// fetch changes from remotes
	"git.autofetch": true,
	// smart commit ctrl + enter
	"git.enableSmartCommit": true,
	// git syncing confirmation
	"git.confirmSync": false,
	//____________SYSTEM SETTINGS____________

	//__________EXTENSION SETTINGS___________
	// #prettier
	"prettier.useTabs": true,
	// #liveServer
	"liveServer.settings.donotShowInfoMsg": true,
	"liveServer.settings.useLocalIp": true,
	// #theme-one dark pro
	"workbench.colorTheme": "One Dark Pro",
	// #tabnine
	"tabnine.experimentalAutoImports": true,
	//__________EXTENSION SETTINGS___________

	//___________FORMATER SETTINGS___________
	// HTML formatter
	"[html]": {
		"editor.defaultFormatter": "HookyQR.beautify"
	},
	// CSS formatter
	"[css]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	// JavaScript formatter
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	// JSON formatter
	"[jsonc]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	// React formatter
	"[javascriptreact]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	}
	//___________FORMATER SETTINGS___________

	// python SETTINGS___________

	// python SETTINGS___________
}
